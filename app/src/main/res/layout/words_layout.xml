<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89ccce"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.csmprojects.sanvaada.Words">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#89ccce">


        <GridView
            android:id="@+id/wordsLayoutDisplayGrid"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_rectangle"
            android:columnWidth="40dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <RelativeLayout
            android:id="@+id/mainButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#009da2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wordsLayoutBackspaceButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/backspace_arrow_selector" />

            <!--<Button-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:id="@+id/mainLayoutPlayBtn"-->
            <!--android:layout_margin="5dp"-->
            <!--android:background="@drawable/play_button_selector"/>-->
        </RelativeLayout>


        <com.csmprojects.sanvaada.ChainFriendlyImageView
            android:id="@+id/wordsImageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_stroke"
            android:padding="5dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/wordsLayoutMeaningTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:textSize="18sp"

            android:textStyle="bold" />

        <android.support.v4.view.ViewPager
            android:id="@+id/wordsLayoutViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/scrollView"
            android:layout_below="@+id/wordsLayoutMeaningTxtView" />

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--<Button-->
                <!--android:layout_width="43dp"-->
                <!--android:layout_height="43dp"-->
                <!--android:layout_margin="8dp"-->
                <!--android:id="@+id/wordsLayoutTimeBtn"-->
                <!--android:background="@drawable/time_selector"-->
                <!--/>-->

                <!--<Button-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:layout_margin="8dp"-->
                <!--android:id="@+id/wordsLayoutNoBtn"-->
                <!--android:background="@drawable/numbers_selector"-->
                <!--/>-->
                <Button
                    android:id="@+id/wordsLayoutFoodBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/food_selector" />

                <Button
                    android:id="@+id/wordsLayoutNoBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/numbers_selector" />

                <Button
                    android:id="@+id/wordsLayoutVerbBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/verb_selector" />


                <Button
                    android:id="@+id/wordsLayoutPeopleBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/people_selector" />

                <Button
                    android:id="@+id/wordsLayoutTimeBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/time_selector" />

                <Button
                    android:id="@+id/wordsLayoutQuestionBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/question_selector" />

                <Button
                    android:id="@+id/wordsLayoutWeightBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/weight_selector" />
            </LinearLayout>

        </HorizontalScrollView>


    </RelativeLayout>

</LinearLayout>
